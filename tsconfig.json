{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["esnext", "DOM"],
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "help": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": "./"
  },
  "include": ["./src"]
}
